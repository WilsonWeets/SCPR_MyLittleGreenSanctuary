@page
@model MLGS.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Bienvenue</h2>
<h3>Données de votre parcelle</h3>

<table class="table">
    <thead>
        <tr>
            <th class="bold-data">
                Température ambiante (°C) :
            </th>
            <th class="bold-data">
                Humidité dans l'air (%) :
            </th>
            <th class="bold-data">
                Luminosité (lux) :
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ParcelData)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Temperature_sensor_value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Humidity_value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Light_sensor_value)
                </td>
            </tr>
        }
    </tbody>
</table>